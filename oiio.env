{
   "platforms": ["darwin", "windows", "linux"],
   "environment":
   {
      "OIIO_ROOT": {"strict": True, "common": "@path/@tool/@version/@platform"},
      "PATH": "${OIIO_ROOT}/bin"
   },
   "optional":
   {
      "python":
      {
         "PYTHONPATH": "${OIIO_ROOT}/lib/python/${PYTHON_VERSION}"
      },
      "devel":
      {
         "OIIO_INCLUDE": {"strict": True, "common": "${OIIO_ROOT}/include"},
         "OIIO_LIB": {"strict": True, "common": "${OIIO_ROOT}/lib"}
      }
   }
}